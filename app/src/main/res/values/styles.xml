        <!-- Customize the popup overlay theme here. -->
        <item name="android:background">@color/black</item>
    </style>
    <style name="MyPopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/my_popup_background</item>
        <item name="android:textColor">@color/my_popup_text_color</item>
