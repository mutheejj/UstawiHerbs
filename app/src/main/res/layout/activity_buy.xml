<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:onClick="onClickListener"
            android:layout_marginBottom="16dp" />

        <!-- Search bar -->

        <!-- Featured Herbs -->
        <TextView
            android:id="@+id/featured_herbs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured Herbs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Featured Herbs Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/herb1_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/herb1" />

                <TextView
                    android:id="@+id/herb1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Herb 1" />

                <TextView
                    android:id="@+id/herb1_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brief description of Herb 1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/herb2_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/herb2" />

                <TextView
                    android:id="@+id/herb2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Herb 2" />

                <TextView
                    android:id="@+id/herb2_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brief description of Herb 2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/herb3_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/herb3" />

                <TextView
                    android:id="@+id/herb3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Herb 3" />

            </LinearLayout>

        </LinearLayout>

        <!-- WebView Section -->
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- View All button -->

        <!-- Herb details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/herb_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Herb 1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/herb_details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brief description of Herb 1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/herb_details_uses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uses/Benefits"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/herb_details_dosages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended Dosages"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/herb_details_side_effects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potential Side Effects"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/herb_details_interactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interactions with Medications"
                android:layout_marginBottom="16dp" />

            <!-- Buy Now button -->

        </LinearLayout>

    </LinearLayout>
</ScrollView>
